<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:minHeight="42dp"
    android:layout_height="wrap_content"
    android:background="@drawable/style_item_recyclerview"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <TextView
        android:id="@+id/textViewTopicCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="TextViewTopicCategory"
        android:textSize="18sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
        />

    <TextView
        android:id="@+id/textViewSolvedProblem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="18sp"
        tools:text="test1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guidelineRight"
        app:layout_constraintBottom_toTopOf="@+id/textViewCorrectlySolvedProblem"

        />

    <TextView
        android:id="@+id/textViewCorrectlySolvedProblem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="18sp"
        android:textColor="@color/colorTextCorrectly"
        tools:text="test2"
        app:layout_constraintTop_toBottomOf="@+id/textViewSolvedProblem"
        app:layout_constraintStart_toEndOf="@+id/guidelineRight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>